<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:id="@+id/meetingListItem">

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:id="@+id/placeImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/insertimage"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/admin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/baseline_settings_24"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/meetingListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="7월 놀러가자"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/meetingListStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2022.05.01"/>
            <TextView
                android:id="@+id/meetingDateSlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="-"/>
            <TextView
                android:id="@+id/meetingListEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2022.05.10"/>

<!--            <TextView-->
<!--                android:id="@+id/meetingListMem"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:visibility="invisible"-->
<!--                android:text="trip Member"/>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/membercount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:text="10명 참여중"
                android:layout_marginTop="5dp"
                android:textSize="15sp"/>

        </LinearLayout>
        </LinearLayout>
            <Button
                android:id="@+id/chatentrybtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="채팅방 입장"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/purple_200"
                android:visibility="gone"

                />




        </LinearLayout>

    </LinearLayout>






</LinearLayout>