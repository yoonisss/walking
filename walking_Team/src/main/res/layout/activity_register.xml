<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="35dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/registerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#673AB7"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="부산 한 걸음"
        android:fontFamily="@font/cookierunblack"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textColor="#B4B4B4"
        android:textSize="16sp"
        android:text="형식에 맞게 내용을 입력해주세요"
        android:fontFamily="@font/cookierunblack"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/galleryAdd"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="90dp"
        app:cardElevation="0dp"
        android:layout_gravity="center"
        >

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            />
        <TextView
            android:id="@+id/addimgvector"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:gravity="center_vertical"
            android:background="@drawable/baseline_add_photo_alternate_24"
            />


    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:hint="아이디를 입력해주세요"
        android:fontFamily="@font/cookierunblack"/>

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        android:textSize="20sp"
        android:hint="영어/숫자로 4자리이상 입력해주세요"
        android:inputType="textPassword"
        android:fontFamily="@font/cookierunblack"/>

    <EditText
        android:id="@+id/editNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="15dp"
        android:textSize="20sp"
        android:hint="닉네임을 입력해주세요"
        android:inputType="textPersonName"
        android:fontFamily="@font/cookierunblack"/>

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#673AB7"
        android:textSize="20sp"
        android:text="회원가입"
        android:fontFamily="@font/cookierunblack"/>

    <TextView
        android:id="@+id/tvBackLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="로그인화면으로 돌아가기 "
        android:fontFamily="@font/cookierunblack"/>
</LinearLayout>